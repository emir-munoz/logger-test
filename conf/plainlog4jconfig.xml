<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	debug="false">

	<appender name="FileAppender" class="org.apache.log4j.FileAppender">
		<param name="File" value="Indentify-Log.txt" />
		<param name="Append" value="false" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %p - %m%n" />
		</layout>
	</appender>

	<!-- <appender name="ConsoleAppender" class="org.apache.log4j.ConsoleAppender"> 
		<layout class="org.apache.log4j.SimpleLayout" /> </appender> -->

	<appender name="ConsoleSTDOUT" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.err" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{ISO8601}] %-5p %c %m %n" />
		</layout>
		<!-- <layout class="org.apache.log4j.SimpleLayout" /> -->
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
			<param name="LevelMax" value="INFO" />
		</filter>
	</appender>

	<appender name="ConsoleSTDERR" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.err" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{ISO8601}] %-5p %c %m %n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="DEBUG" />
			<param name="LevelMax" value="FATAL" />
		</filter>
	</appender>

	<appender name="email" class="em.logging.test.FilteredSMTPAppender">
		<param name="BufferSize" value="10" />
		<param name="SMTPHost" value="smtp.gmail.com" />
		<param name="port" value="587" />
		<param name="SMTPProtocol" value="smtp" />
		<param name="SMTPUsername" value="lodpeas@emunoz.org" />
		<param name="SMTPPassword" value="L0dp3as2" />
		<param name="TLS" value="true" />
		<param name="TimeFrame" value="10" />
		<param name="MaxEMails" value="2" />
		<param name="From" value="lodpeas@emunoz.org" />
		<param name="To" value="emir.munoz@gmail.com" />
		<param name="Subject" value="Wikitables" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss,SSS} %-5p [%c{1}] %m%n" />
		</layout>
	</appender>

	<appender name="AdministratorEmail" class="em.logging.test.FilteredSMTPAppender">
		<param name="BufferSize" value="10" />
		<param name="SMTPHost" value="smtp.gmail.com" />
		<param name="SMTPUsername" value="lodpeas@emunoz.org" />
		<param name="SMTPPassword" value="L0dp3as2" />
		<param name="TLS" value="true" />
		<param name="TimeFrame" value="10" />
		<param name="MaxEMails" value="2" />
		<param name="From" value="lodpeas@emunoz.org" />
		<param name="To" value="emir.munoz@gmail.com" />
		<param name="Subject" value="Wikitables" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss,SSS} %-5p [%c{1}] %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="ERROR" />
			<param name="LevelMax" value="FATAL" />
		</filter>
	</appender>

	<root>
		<priority value="warn" />
		<appender-ref ref="ConsoleSTDOUT" />
		<appender-ref ref="ConsoleSTDERR" />
		<appender-ref ref="email" />
	</root>

</log4j:configuration>